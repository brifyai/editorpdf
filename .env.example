# Configuración de Document Analyzer
# Copia este archivo a .env y ajusta los valores según necesites

# Puerto del servidor
PORT=3000

# Tamaño máximo de archivo (bytes) - 50MB por defecto
MAX_FILE_SIZE=52428800

# Máximo de archivos por lote
MAX_BATCH_FILES=10

# Directorio de uploads
UPLOAD_DIR=uploads

# Directorio de logs
LOG_DIR=logs

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# Modo de operación (development, production)
NODE_ENV=development

# Habilitar CORS
ENABLE_CORS=true

# Timeout de procesamiento (milisegundos)
PROCESSING_TIMEOUT=300000

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS (SUPABASE)
# ===========================================

# Configuración de Supabase para el servidor
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Configuración de Supabase para el frontend (compatibilidad)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your_supabase_anon_key_here

# NOTA: Para configurar Supabase:
# 1. Crea un proyecto en https://supabase.com
# 2. Copia la URL del proyecto y la API key anónima
# 3. Ejecuta el schema SQL en docs/database-schema.sql
# 4. Configura las variables de entorno aquí o en un archivo .env

# ===========================================
# CONFIGURACIÓN DE APIS DE IA
# ===========================================

# API Key de Groq (obtenla de https://console.groq.com/)
GROQ_API_KEY=gsk_your_groq_api_key_here

# API Key de Chutes.ai (obtenla de https://chutes.ai/)
CHUTES_API_KEY=your_chutes_api_key_here

# URL de la API de Chutes.ai
CHUTES_API_URL=https://api.chutes.ai

# ===========================================
# MODELOS DE IA DISPONIBLES EN GROQ
# ===========================================
# Modelos disponibles:
# - llama-3.1-8b-instant (rápido)
# - llama-3.3-70b-versatile (balanceado)
# - mixtral-8x7b-32768 (profundo)

# Modelo predeterminado para análisis
DEFAULT_AI_MODEL=llama-3.3-70b-versatile

# ===========================================
# CONFIGURACIÓN AVANZADA
# ===========================================

# Límite de tokens para análisis de IA
AI_MAX_TOKENS=8000

# Temperatura para generación de texto (0.0-1.0)
AI_TEMPERATURE=0.2

# Timeout para llamadas a APIs de IA (milisegundos)
AI_TIMEOUT=60000

# Habilitar análisis con IA por defecto
ENABLE_AI_BY_DEFAULT=true

# Tipo de análisis IA por defecto (fast/balanced/deep)
DEFAULT_AI_ANALYSIS_TYPE=balanced